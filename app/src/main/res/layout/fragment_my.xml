<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/none_bg"
    android:orientation="vertical"
    tools:context="com.flowerbell.gejigeji.modules.main.fragment.MyFragment">

    <com.flowerbell.gejigeji.widget.StrokeTextView
        android:id="@+id/tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y70"
        android:fontFamily="@font/hylxjt"
        android:text="我的"
        android:textSize="@dimen/x32"
        app:StrokeTextViewHasBorder="true"
        app:StrokeTextViewInnerColor="@color/color_fdd329"
        app:StrokeTextViewOuterColor="@color/color_7b492a"
        app:StrokeTextViewStroke="8px" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y60"
        android:src="@mipmap/ic_launcher" />

    <com.flowerbell.gejigeji.widget.StrokeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y8"
        android:fontFamily="@font/hylxjt"
        app:StrokeTextViewHasBorder="true"
        android:text="张晓雅"
        android:textSize="@dimen/x24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y20"
        android:orientation="vertical"
        android:background="@drawable/shape_border_comm">
        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:fontFamily="@font/hylxjt"
            android:textSize="@dimen/x40"
            android:gravity="center"
            android:text="余额 0.0元"/>
        <View
            android:layout_marginLeft="4px"
            android:layout_marginRight="4px"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="#b39c7a"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/x32"
                android:gravity="center"
                android:layout_height="match_parent"
                app:StrokeTextViewHasBorder="true"
                android:fontFamily="@font/hylxjt"
                app:StrokeTextViewInnerColor="@color/color_ffa800"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px"
                android:text="充 值"/>
            <View
                android:layout_width="4px"
                android:layout_height="match_parent"
                android:background="#b39c7a"/>
            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                app:StrokeTextViewHasBorder="true"
                android:fontFamily="@font/hylxjt"
                app:StrokeTextViewInnerColor="@color/color_ffa800"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px"
                android:textSize="@dimen/x32"
                android:text="提 现"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/shape_border_comm">
        <com.flowerbell.gejigeji.widget.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hylxjt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            app:StrokeTextViewHasBorder="true"
            app:StrokeTextViewInnerColor="@color/color_ffa800"
            app:StrokeTextViewOuterColor="@color/color_7b492a"
            app:StrokeTextViewStroke="8px"
            android:text="地址管理"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/shape_border_comm">
        <com.flowerbell.gejigeji.widget.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hylxjt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            app:StrokeTextViewHasBorder="true"
            app:StrokeTextViewInnerColor="@color/color_ffa800"
            app:StrokeTextViewOuterColor="@color/color_7b492a"
            app:StrokeTextViewStroke="8px"
            android:text="设置"/>

    </RelativeLayout>


</LinearLayout>
