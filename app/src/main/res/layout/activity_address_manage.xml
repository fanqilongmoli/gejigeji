<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/none_bg"
    tools:context="com.flowerbell.gejigeji.modules.my.AddressManageActivity">
    <com.flowerbell.gejigeji.widget.CommTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:CommTitleBarTitle="地址管理"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/y60"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_margin="@dimen/x50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/x32"
        android:text="添加新的地址"
        android:gravity="center"
        android:background="@drawable/next_btn_bg"/>

</LinearLayout>
