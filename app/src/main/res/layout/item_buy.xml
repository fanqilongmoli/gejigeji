<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/y93">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/x16"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/auction_egg_ic"/>
            <TextView
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/x32"
                android:text="鸡蛋1"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/x32"
            android:text="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/x32"
            android:text="1.00"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y54"
                android:background="@drawable/shape_buy"
                android:gravity="center"
                android:fontFamily="@font/hylxjt"
                android:text="购买"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#975f31"/>
</LinearLayout>