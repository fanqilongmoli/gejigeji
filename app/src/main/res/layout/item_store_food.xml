<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/y50"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/x104"
        android:layout_height="@dimen/x104"
        android:src="@drawable/food_ic_1"/>
    <com.flowerbell.gejigeji.widget.StrokeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:StrokeTextViewHasBorder="true"
        android:textSize="@dimen/x24"
        android:layout_marginTop="@dimen/y10"
        android:fontFamily="@font/hylxjt"
        android:text="一号饲料"/>
    <com.flowerbell.gejigeji.widget.StrokeTextView
        android:layout_marginTop="@dimen/y4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hylxjt"
        android:textSize="@dimen/x24"
        android:text="50金币"/>
    <com.flowerbell.gejigeji.widget.StrokeTextView
        android:layout_marginTop="@dimen/y10"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y46"
        android:textSize="@dimen/x24"
        android:gravity="center"
        android:background="@drawable/shape_buy"
        android:fontFamily="@font/hylxjt"
        android:text="购买"/>

</LinearLayout>