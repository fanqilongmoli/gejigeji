<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/none_bg"
    android:orientation="vertical"
    tools:context="com.flowerbell.gejigeji.modules.main.fragment.ExchangeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y70"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x120"
        android:paddingRight="@dimen/x120">

        <LinearLayout
            android:id="@+id/ll_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hylxjt"
                android:text="商店"
                android:textSize="@dimen/x32"
                app:StrokeTextViewHasBorder="true"
                app:StrokeTextViewInnerColor="@color/color_fdd329"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px" />

            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_store_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hylxjt"
                android:text="一"
                android:textSize="@dimen/x32"
                app:StrokeTextViewHasBorder="true"
                app:StrokeTextViewInnerColor="@color/color_fdd329"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_auction_house"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_auction_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hylxjt"
                android:text="拍卖行"
                android:textSize="@dimen/x32"
                app:StrokeTextViewHasBorder="true"
                app:StrokeTextViewInnerColor="@color/color_ffefae"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px" />

            <com.flowerbell.gejigeji.widget.StrokeTextView
                android:id="@+id/tv_auction_house_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hylxjt"
                android:text="一"
                android:textSize="@dimen/x32"
                app:StrokeTextViewHasBorder="true"
                app:StrokeTextViewInnerColor="@color/color_ffefae"
                app:StrokeTextViewOuterColor="@color/color_7b492a"
                app:StrokeTextViewStroke="8px" />
        </LinearLayout>
    </LinearLayout>

    <com.chuangxincheng.commlibrary.widget.NoScrollViewPager
        android:id="@+id/noScrollViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
