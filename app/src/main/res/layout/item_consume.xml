<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y87">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y46"
                android:src="@drawable/food_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饲料"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x32"
                android:fontFamily="@font/hylxjt"
                android:textColor="@color/color_7b492a"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/x32"
            android:fontFamily="@font/hylxjt"
            android:textColor="@color/color_7b492a"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-10"
            android:gravity="center"
            android:textSize="@dimen/x32"
            android:textColor="#c75454"
            android:fontFamily="@font/hylxjt"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bda494"/>
</LinearLayout>